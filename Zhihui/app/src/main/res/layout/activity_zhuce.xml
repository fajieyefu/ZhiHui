<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dip"
    android:background="@mipmap/login_bg">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:src="@mipmap/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dip"/>
    <ImageView
        android:id="@+id/logo_size"
        android:layout_width="120dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:src="@mipmap/logo_size"/>
    <EditText
        android:id="@+id/account"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_below="@+id/logo_size"
        android:layout_marginTop="20dip"
        android:paddingLeft="40dip"
        android:textSize="14dp"
        android:hint="账号"
        android:background="@mipmap/ed_bg"/>
    <EditText
        android:id="@+id/password"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_below="@+id/account"
        android:paddingLeft="40dip"
        android:textSize="14dp"
        android:hint="密码"
        android:inputType="numberPassword"
        android:layout_marginTop="10dip"
        android:background="@mipmap/ed_bg"/>
    <Button
        android:id="@+id/sumbit"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@mipmap/btn_bg"
        android:layout_below="@+id/password"
        android:layout_marginTop="15dip"
        style="?attr/borderlessButtonStyle"
        android:text="注册"
        android:onClick="onClick"
        android:textColor="#fff"
        android:textSize="16dp"/>
    <ImageView
        android:layout_width="20dip"
        android:layout_height="45dip"
        android:src="@mipmap/icon_login_account"
        android:layout_alignBottom="@+id/account"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"/>
    <ImageView
        android:layout_width="20dip"
        android:layout_height="45dip"
        android:src="@mipmap/icon_login_password"
        android:layout_alignBottom="@+id/password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"/>



</RelativeLayout>
